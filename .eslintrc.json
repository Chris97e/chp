{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@stylistic/ts",
    "@typescript-eslint"
  ],
  "ignorePatterns": ["chp", "node_modules", "webpack"],
  "rules": {
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
